# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host.neon.tech/football_ai?sslmode=require"

# Redis (Upstash)
REDIS_URL="redis://default:password@redis.upstash.io:6379"

# ========================================
# Football API Keys (Choose one or both)
# ========================================

# Option 1: Football-Data.org (Primary - Recommended)
# - 10 requests/minute (free tier)
# - 12 competitions (Premier League, La Liga, Serie A, Bundesliga, Ligue 1, etc.)
# - Register: https://www.football-data.org/client/register
FOOTBALL_DATA_KEY="your-football-data-key"
NEXT_PUBLIC_FOOTBALL_DATA_KEY="your-football-data-key"

# Option 2: API-Football (Secondary/Fallback)
# - 100 requests/day (free tier)
# - All competitions available
# - Register: https://www.api-football.com/
API_FOOTBALL_KEY="your-api-football-key"
NEXT_PUBLIC_API_FOOTBALL_KEY="your-api-football-key"

# JWT Secrets
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this"

# Next.js (Frontend)
NEXT_PUBLIC_SITE_URL="https://futballai.com"
NEXT_PUBLIC_API_URL="https://api.futballai.com"
NEXT_PUBLIC_WS_URL="wss://api.futballai.com"

# Use mock data (set to 'true' for development without API keys)
# If no API keys are configured, mock data will be used automatically
NEXT_PUBLIC_USE_MOCK="false"

# Sentry (Optional)
SENTRY_DSN=""

# Node Environment
NODE_ENV="development"

# Vercel (auto-set by Vercel)
# VERCEL_URL=""
